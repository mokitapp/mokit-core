                            <polyline points="9 22 9 12 15 12 15 22"/>
                        </svg>
                    </div>
                    <span class="nav-text">Dashboard</span>
                </NavLink>
                
                <NavLink class="nav-item" href="projects">
                    <div class="nav-icon">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M22 19a2 2 0 01-2 2H4a2 2 0 01-2-2V5a2 2 0 012-2h5l2 3h9a2 2 0 012 2z"/>
                        </svg>
                    </div>
                    <span class="nav-text">Projects</span>
                </NavLink>
                
                <NavLink class="nav-item" href="teams">
                    <div class="nav-icon">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M17 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2"/>
                            <circle cx="9" cy="7" r="4"/>
                            <path d="M23 21v-2a4 4 0 00-3-3.87"/>
                            <path d="M16 3.13a4 4 0 010 7.75"/>
                        </svg>
                    </div>
                    <span class="nav-text">My Teams</span>
                </NavLink>
            </div>

            <!-- Tools -->
            <div class="nav-group">
                <div class="nav-group-title">Tools</div>
                
                <NavLink class="nav-item" href="logs">
                    <div class="nav-icon">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M14 2H6a2 2 0 00-2 2v16a2 2 0 002 2h12a2 2 0 002-2V8z"/>
                            <polyline points="14 2 14 8 20 8"/>
                            <line x1="16" y1="13" x2="8" y2="13"/>
                            <line x1="16" y1="17" x2="8" y2="17"/>
                        </svg>
                    </div>
                    <span class="nav-text">Request Logs</span>
                </NavLink>
                
                <NavLink class="nav-item" href="variables">
                    <div class="nav-icon">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="16 18 22 12 16 6"/>
                            <polyline points="8 6 2 12 8 18"/>
                        </svg>
                    </div>
                    <span class="nav-text">Variables</span>
                </NavLink>
            </div>

            @if (isAdmin)
            {
                <!-- Administration (Admin Only) -->
                <div class="nav-group">
                    <div class="nav-group-title">
                        <span>ADMINISTRATION</span>
                        <span class="admin-indicator"></span>
                    </div>
                    
                    <NavLink class="nav-item" href="Admin/Users">
                        <div class="nav-icon">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M16 21v-2a4 4 0 00-4-4H6a4 4 0 00-4 4v2"/>
                                <circle cx="9" cy="7" r="4"/>
                                <line x1="19" y1="8" x2="19" y2="14"/>
                                <line x1="22" y1="11" x2="16" y2="11"/>
                            </svg>
                        </div>
                        <span class="nav-text">Users</span>
                    </NavLink>
                    
                    <NavLink class="nav-item" href="Admin/Teams">
                        <div class="nav-icon">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                                <line x1="3" y1="9" x2="21" y2="9"/>
                                <line x1="9" y1="21" x2="9" y2="9"/>
                            </svg>
                        </div>
                        <span class="nav-text">All Teams</span>
                    </NavLink>
                </div>
            }

            <!-- Footer Section (User Info) -->
            <div class="nav-footer">
                <div class="user-card">
                    <div class="user-avatar">
                        @userInitial
                    </div>
                    <div class="user-details">
                        <span class="user-name">@userName</span>
                        @if (isAdmin)
                        {
                            <span class="user-role admin">Admin</span>
                        }
                        else
                        {
                            <span class="user-role">User</span>
                        }
                    </div>
                </div>
                
                <form action="/api/account/logout" method="post" class="logout-form">
                    <button type="submit" class="logout-btn">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M9 21H5a2 2 0 01-2-2V5a2 2 0 012-2h4"/>
                            <polyline points="16 17 21 12 16 7"/>
                            <line x1="21" y1="12" x2="9" y2="12"/>
                        </svg>
                        <span>Logout</span>
                    </button>
                </form>
            </div>
        </nav>
    </Authorized>
</AuthorizeView>

