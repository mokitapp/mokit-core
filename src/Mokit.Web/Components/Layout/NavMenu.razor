@code {
    private bool isAdmin = false;
    private string userName = "";
    private string userInitial = "?";

    [CascadingParameter]
    private Task<AuthenticationState>? authenticationStateTask { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (authenticationStateTask != null)
        {
            var authState = await authenticationStateTask;
            var user = authState.User;
            
            if (user.Identity?.IsAuthenticated == true)
            {
                // Get admin status from claim (set during login)
                isAdmin = user.HasClaim(c => c.Type == "IsAdmin" && c.Value == "True");
                
                // Get user name from claims
                var nameClaim = user.FindFirst(System.Security.Claims.ClaimTypes.Name)?.Value;
                var emailClaim = user.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value;
                
                userName = nameClaim ?? emailClaim ?? "User";
                userInitial = !string.IsNullOrEmpty(userName) ? userName.Substring(0, 1).ToUpper() : "?";
            }
        }
    }
}
