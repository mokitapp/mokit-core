@using Mokit.Application.DTOs.Endpoint
@using Mokit.Domain.Enums

<div class="endpoint-list">
    @foreach (var endpoint in Endpoints)
    {
        <div class="endpoint-item" @onclick="() => OnEdit.InvokeAsync(endpoint.Id)">
            <div class="flex gap-3" style="align-items: flex-start;">
                <span class="method-badge method-@endpoint.Method.ToString().ToLower()" style="margin-top: 3px;">
                    @endpoint.Method
                </span>
                <div style="display: flex; flex-direction: column; gap: 2px;">
                    <div style="font-weight: 500; line-height: 1.2;">@endpoint.Name</div>
                    <code class="text-muted text-sm" style="line-height: 1.2;">@endpoint.Route</code>
                </div>
            </div>
            <div class="flex items-center gap-3">
                <span class="status-badge">@(endpoint.Responses?.FirstOrDefault()?.StatusCode ?? 200)</span>
                <button class="btn btn-sm btn-danger" @onclick="() => OnDelete.InvokeAsync(endpoint.Id)" @onclick:stopPropagation="true">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="3 6 5 6 21 6"/>
                        <path d="M19 6v14a2 2 0 01-2 2H7a2 2 0 01-2-2V6m3 0V4a2 2 0 012-2h4a2 2 0 012 2v2"/>
                    </svg>
                </button>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public List<MockEndpointDto> Endpoints { get; set; } = new();
    [Parameter] public EventCallback<Guid> OnEdit { get; set; }
    [Parameter] public EventCallback<Guid> OnDelete { get; set; }
}
