@page "/teams"
@rendermode InteractiveServer
@using Mokit.Application.Interfaces
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject ITeamService TeamService
@inject IUserService UserService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Teams - Mokit</PageTitle>

<div class="page-header">
    <div>
        <h1 class="page-title">My Teams</h1>
        <p class="page-description">View teams you are a member of</p>
    </div>
</div>

@if (loading)
{
    <div class="flex items-center justify-center" style="padding: 3rem;">
        <div class="spinner"></div>
    </div>
}
else if (teams.Count == 0)
{
    <div class="card">
        <div class="empty-state">
            <svg class="empty-state-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M17 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2"/>
                <circle cx="9" cy="7" r="4"/>
                <path d="M23 21v-2a4 4 0 00-3-3.87"/>
                <path d="M16 3.13a4 4 0 010 7.75"/>
            </svg>
            <div class="empty-state-title">You are not a member of any team yet</div>
            <p class="text-muted">Ask your administrator to add you to a team</p>
        </div>
    </div>
}
else
{
    <div class="teams-grid">
        @foreach (var team in teams)
        {
            <div class="team-card" @onclick="() => NavigateToTeam(team.Id)">
                <div class="team-card-header">
                    <div class="team-avatar-lg">
                        @team.Name.Substring(0, 1).ToUpper()
                    </div>
                    <div class="team-info">
                        <h3 class="team-name">@team.Name</h3>
                        <code class="team-slug">/@team.Slug</code>
                    </div>
                </div>
                
                @if (!string.IsNullOrEmpty(team.Description))
                {
                    <p class="team-description">@team.Description</p>
                }
                
                <div class="team-stats">
                    <div class="stat-item">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M17 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2"/>
                            <circle cx="9" cy="7" r="4"/>
                        </svg>
                        <span>@team.MemberCount members</span>
                    </div>
                    <div class="stat-item">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M22 19a2 2 0 01-2 2H4a2 2 0 01-2-2V5a2 2 0 012-2h5l2 3h9a2 2 0 012 2z"/>
                        </svg>
                        <span>@team.ProjectCount projects</span>
                    </div>
                </div>
                
                <div class="team-card-footer">
                    <span class="view-details">
                        View Details
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="9 18 15 12 9 6"/>
                        </svg>
                    </span>
                </div>
            </div>
        }
    </div>
}

<style>
    .teams-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 1.25rem;
    }

    .team-card {
        background: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        padding: 1.25rem;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .team-card:hover {
        border-color: var(--primary-color);
        transform: translateY(-2px);
        box-shadow: 0 8px 25px -5px rgba(99, 102, 241, 0.15);
    }

    .team-card-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .team-avatar-lg {
        width: 52px;
        height: 52px;
        border-radius: 12px;
        background: linear-gradient(135deg, #10b981, #059669);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 1.375rem;
        flex-shrink: 0;
    }

    .team-info {
        flex: 1;
        min-width: 0;
    }

    .team-name {
        margin: 0 0 0.25rem 0;
        font-size: 1.125rem;
        font-weight: 600;
        color: var(--text-color);
    }

    .team-slug {
        font-size: 0.75rem;
        color: var(--text-muted);
        background: rgba(255, 255, 255, 0.05);
        padding: 0.125rem 0.5rem;
        border-radius: 4px;
    }

    .team-description {
        color: var(--text-muted);
        font-size: 0.875rem;
        margin: 0 0 1rem 0;
        line-height: 1.5;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .team-stats {
        display: flex;
        gap: 1.5rem;
        padding: 0.875rem 0;
        border-top: 1px solid var(--border-color);
        border-bottom: 1px solid var(--border-color);
    }

    .stat-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--text-muted);
        font-size: 0.8125rem;
    }

    .stat-item svg {
        width: 16px;
        height: 16px;
    }

    .team-card-footer {
        padding-top: 0.875rem;
    }

    .view-details {
        display: flex;
        align-items: center;
        gap: 0.375rem;
        color: var(--primary-color);
        font-size: 0.8125rem;
        font-weight: 500;
    }

    .view-details svg {
        width: 14px;
        height: 14px;
        transition: transform 0.2s;
    }

    .team-card:hover .view-details svg {
        transform: translateX(3px);
    }
</style>

@code {
    private List<TeamDto> teams = new();
    private bool loading = true;
    private string? userId;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        userId = authState.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
        
        await LoadTeams();
        loading = false;
    }

    private async Task LoadTeams()
    {
        if (!string.IsNullOrEmpty(userId))
        {
            var result = await TeamService.GetUserTeamsAsync(userId);
            if (result.IsSuccess)
            {
                teams = result.Data ?? new List<TeamDto>();
            }
        }
    }

    private void NavigateToTeam(Guid teamId)
    {
        Navigation.NavigateTo($"/teams/{teamId}");
    }
}
