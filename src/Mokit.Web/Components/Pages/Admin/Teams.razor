@page "/Admin/Teams"
@rendermode InteractiveServer
@using Mokit.Application.DTOs.Team
@using Mokit.Application.Interfaces
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject IUserService UserService
@inject ITeamService TeamService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Team Management - Mokit</PageTitle>

<div class="page-header">
    <div>
        <h1 class="page-title">Team Management</h1>
        <p class="page-description">Manage all teams</p>
    </div>
    <button class="btn btn-primary" @onclick="() => showCreateModal = true">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 2L2 7l10 5 10-5-10-5z"/>
            <path d="M2 17l10 5 10-5"/>
            <path d="M2 12l10 5 10-5"/>
        </svg>
        Create Team
    </button>
</div>

@if (!isAdmin)
{
    <div class="alert alert-danger">
        You do not have access to this page.
    </div>
}
else if (loading)
{
    <div class="loading-container">
        <div class="spinner"></div>
    </div>
}
else
{
    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success mb-4">@successMessage</div>
    }

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">All Teams (@teams.Count)</h3>
        </div>
        
        @if (teams.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Team Name</th>
                        <th>Slug</th>
                        <th>Members</th>
                        <th>Projects</th>
                        <th>Status</th>
                        <th>Created</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var team in teams)
                    {
                        <tr>
                            <td>
                                <div class="team-info">
                                    <div class="team-avatar">
                                        @(team.Name.Length > 0 ? team.Name.Substring(0, 1).ToUpper() : "?")
                                    </div>
                                    <span class="team-name">@team.Name</span>
                                </div>
                            </td>
                            <td><code>/@team.Slug</code></td>
                            <td>@team.MemberCount</td>
                            <td>@team.ProjectCount</td>
                            <td>
                                @if (team.IsActive)
                                {
                                    <span class="badge badge-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">Disabled</span>
                                }
                            </td>
                            <td>@team.CreatedAt.ToString("dd.MM.yyyy")</td>
                            <td>
                                <a href="/teams/@team.Id" class="btn btn-sm btn-outline">Manage</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="empty-state">
                <svg class="empty-state-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M12 2L2 7l10 5 10-5-10-5z"/>
                    <path d="M2 17l10 5 10-5"/>
                    <path d="M2 12l10 5 10-5"/>
                </svg>
                <div class="empty-state-title">No teams yet</div>
                <p>Create your first team</p>
                <button class="btn btn-primary mt-4" @onclick="() => showCreateModal = true">Create Team</button>
            </div>
        }
    </div>
}

<!-- Create Team Modal -->
@if (showCreateModal)
{
    <div class="modal-backdrop" @onclick="() => showCreateModal = false">
        <div class="modal" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h3>New Team</h3>
                <button class="modal-close" @onclick="() => showCreateModal = false">âœ•</button>
            </div>
            <div class="modal-body">
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger mb-4">@errorMessage</div>
                }

                <div class="form-group">
                    <label class="form-label">Team Name *</label>
                    <input type="text" class="form-control" @bind="newTeamName" placeholder="E.g., Backend Team" />
                </div>

                <div class="form-group">
                    <label class="form-label">Description</label>
                    <textarea class="form-control" rows="3" @bind="newTeamDescription" placeholder="Brief description about the team..."></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-outline" @onclick="() => showCreateModal = false">Cancel</button>
                <button class="btn btn-primary" @onclick="CreateTeam" disabled="@creating">
                    @if (creating)
                    {
                        <span class="spinner-sm"></span>
                    }
                    else
                    {
                        <span>Create</span>
                    }
                </button>
            </div>
        </div>
    </div>
}

<style>
    .team-info {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .team-avatar {
        width: 36px;
        height: 36px;
        border-radius: 8px;
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 0.875rem;
    }

    .team-name {
        font-weight: 500;
    }

    .loading-container {
        display: flex;
        justify-content: center;
        padding: 4rem;
    }

    .modal-backdrop {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1000;
    }

    .modal {
        background: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        width: 100%;
        max-width: 480px;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
    }

    .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.25rem;
        border-bottom: 1px solid var(--border-color);
    }

    .modal-header h3 {
        margin: 0;
        font-size: 1.125rem;
    }

    .modal-close {
        background: none;
        border: none;
        color: var(--text-muted);
        cursor: pointer;
        font-size: 1.25rem;
    }

    .modal-body {
        padding: 1.25rem;
    }

    .modal-footer {
        display: flex;
        justify-content: flex-end;
        gap: 0.75rem;
        padding: 1.25rem;
        border-top: 1px solid var(--border-color);
    }

    .form-group {
        margin-bottom: 1.25rem;
    }

    .form-label {
        display: block;
        font-size: 0.875rem;
        font-weight: 500;
        color: var(--text-color);
        margin-bottom: 0.5rem;
    }

    .form-control {
        width: 100%;
        padding: 0.75rem 1rem;
        font-size: 0.9375rem;
        background: var(--input-bg);
        border: 1px solid var(--border-color);
        border-radius: 8px;
        color: var(--text-color);
    }

    .form-control:focus {
        outline: none;
        border-color: var(--primary-color);
        box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
    }

    textarea.form-control {
        resize: vertical;
        min-height: 80px;
    }

    .alert-success {
        background: rgba(34, 197, 94, 0.1);
        border: 1px solid rgba(34, 197, 94, 0.3);
        color: #4ade80;
        padding: 0.875rem 1rem;
        border-radius: 8px;
    }

    .alert-danger {
        background: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.3);
        color: #f87171;
        padding: 0.875rem 1rem;
        border-radius: 8px;
    }

    .spinner-sm {
        width: 16px;
        height: 16px;
        border: 2px solid rgba(255, 255, 255, 0.3);
        border-top-color: white;
        border-radius: 50%;
        animation: spin 0.6s linear infinite;
    }

    @@keyframes spin {
        to { transform: rotate(360deg); }
    }
</style>

@code {
    private List<TeamDto> teams = new();
    private bool loading = true;
    private bool isAdmin = false;
    private string? currentUserId;

    private bool showCreateModal = false;
    private bool creating = false;
    private string newTeamName = "";
    private string newTeamDescription = "";
    private string? errorMessage;
    private string? successMessage;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        currentUserId = authState.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

        if (string.IsNullOrEmpty(currentUserId))
        {
            Navigation.NavigateTo("/Account/Login");
            return;
        }

        isAdmin = await UserService.IsAdminAsync(currentUserId);

        if (isAdmin)
        {
            await LoadTeams();
        }

        loading = false;
    }

    private async Task LoadTeams()
    {
        // Admin sees all teams
        var result = await TeamService.GetAllTeamsAsync();
        if (result.IsSuccess)
        {
            teams = result.Data ?? new();
        }
    }

    private async Task CreateTeam()
    {
        if (string.IsNullOrWhiteSpace(newTeamName))
        {
            errorMessage = "Team name is required.";
            return;
        }

        creating = true;
        errorMessage = null;

        var dto = new CreateTeamDto
        {
            Name = newTeamName,
            Description = newTeamDescription
        };

        var result = await TeamService.CreateAsync(currentUserId!, dto);

        if (result.IsSuccess)
        {
            showCreateModal = false;
            newTeamName = "";
            newTeamDescription = "";
            successMessage = "Team created successfully.";
            await LoadTeams();
        }
        else
        {
            errorMessage = result.Error ?? "An error occurred.";
        }

        creating = false;
    }
}
