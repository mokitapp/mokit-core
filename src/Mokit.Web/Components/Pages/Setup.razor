@page "/Setup"
@using Mokit.Application.Interfaces
@inject IUserService UserService
@inject NavigationManager Navigation

<PageTitle>Setup - Mokit</PageTitle>

<div class="setup-container">
    <div class="setup-card">
        <div class="setup-header">
            <div class="setup-logo">
                <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="var(--primary-color)" stroke-width="2">
                    <path d="M12 2L2 7l10 5 10-5-10-5z"/>
                    <path d="M2 17l10 5 10-5"/>
                    <path d="M2 12l10 5 10-5"/>
                </svg>
            </div>
            <h1 class="setup-title">Mokit Setup</h1>
            <p class="setup-subtitle">Create your administrator account</p>
        </div>

        @if (!setupRequired)
        {
            <div class="alert alert-info">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"/>
                    <path d="M12 16v-4"/>
                    <path d="M12 8h.01"/>
                </svg>
                System is already set up. <a href="/Account/Login">Sign in</a>
            </div>
        }
        else
        {
            <form method="post" action="/api/account/setup">
                @if (!string.IsNullOrEmpty(Error))
                {
                    <div class="alert alert-danger">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="10"/>
                            <line x1="15" y1="9" x2="9" y2="15"/>
                            <line x1="9" y1="9" x2="15" y2="15"/>
                        </svg>
                        @Error
                    </div>
                }

                <div class="setup-info">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
                    </svg>
                    <span>This account will have full administrator privileges.</span>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="firstName" class="form-label">First Name</label>
                        <input type="text" name="FirstName" id="firstName" class="form-control" placeholder="Your first name" />
                    </div>
                    <div class="form-group">
                        <label for="lastName" class="form-label">Last Name</label>
                        <input type="text" name="LastName" id="lastName" class="form-control" placeholder="Your last name" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="email" class="form-label">Email *</label>
                    <input type="email" name="Email" id="email" class="form-control" placeholder="admin@example.com" required />
                </div>

                <div class="form-group">
                    <label for="password" class="form-label">Password *</label>
                    <input type="password" name="Password" id="password" class="form-control" placeholder="••••••••" required />
                    <small class="form-hint">At least 6 characters, including uppercase/lowercase letters and numbers</small>
                </div>

                <div class="form-group">
                    <label for="confirmPassword" class="form-label">Confirm Password *</label>
                    <input type="password" name="ConfirmPassword" id="confirmPassword" class="form-control" placeholder="••••••••" required />
                </div>

                <button type="submit" class="btn btn-primary btn-block">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M22 11.08V12a10 10 0 11-5.93-9.14"/>
                        <polyline points="22 4 12 14.01 9 11.01"/>
                    </svg>
                    Complete Setup
                </button>
            </form>
        }
    </div>
</div>

<style>
    .setup-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        background: linear-gradient(135deg, #0f0f23 0%, #1a1a3e 50%, #0f0f23 100%);
    }

    .setup-card {
        background: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 16px;
        padding: 2.5rem;
        width: 100%;
        max-width: 520px;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
    }

    .setup-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .setup-logo {
        margin-bottom: 1.5rem;
    }

    .setup-title {
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--text-color);
        margin: 0 0 0.5rem;
    }

    .setup-subtitle {
        color: var(--text-muted);
        margin: 0;
    }

    .setup-info {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1rem;
        background: rgba(99, 102, 241, 0.1);
        border: 1px solid rgba(99, 102, 241, 0.3);
        border-radius: 8px;
        margin-bottom: 1.5rem;
        color: #a5b4fc;
        font-size: 0.875rem;
    }

    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }

    .form-group {
        margin-bottom: 1.25rem;
    }

    .form-label {
        display: block;
        font-size: 0.875rem;
        font-weight: 500;
        color: var(--text-color);
        margin-bottom: 0.5rem;
    }

    .form-control {
        width: 100%;
        padding: 0.75rem 1rem;
        font-size: 0.9375rem;
        background: var(--input-bg);
        border: 1px solid var(--border-color);
        border-radius: 8px;
        color: var(--text-color);
        transition: border-color 0.2s, box-shadow 0.2s;
    }

    .form-control:focus {
        outline: none;
        border-color: var(--primary-color);
        box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
    }

    .form-control::placeholder {
        color: var(--text-muted);
    }

    .form-hint {
        display: block;
        margin-top: 0.375rem;
        font-size: 0.75rem;
        color: var(--text-muted);
    }

    .btn-block {
        width: 100%;
        padding: 0.875rem;
        font-size: 1rem;
        margin-top: 0.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }

    .alert {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.875rem 1rem;
        border-radius: 8px;
        margin-bottom: 1.25rem;
        font-size: 0.875rem;
    }

    .alert-danger {
        background: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.3);
        color: #f87171;
    }

    .alert-info {
        background: rgba(59, 130, 246, 0.1);
        border: 1px solid rgba(59, 130, 246, 0.3);
        color: #60a5fa;
    }

    .alert-info a {
        color: #93c5fd;
        text-decoration: underline;
    }
</style>

@code {
    [SupplyParameterFromQuery]
    public string? Error { get; set; }

    private bool setupRequired = true;

    protected override async Task OnInitializedAsync()
    {
        setupRequired = await UserService.IsSetupRequiredAsync();
    }
}
